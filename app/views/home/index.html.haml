.container
  - if @tasks.empty?
    %span.text-warning There are no tasks!
  - else
    %table.table.table-hover.table-bordered
      %thead
        %tr
          %th Title
          %th Body
          %th Action
          
      %tbody
        - @tasks.each do |task|
          %tr
            %td
              %strong= task.title
            %td.text-info= task.body
            %td
              = link_to 'delete', task_path(task),class:  'btn btn-primary', remote: true, method: :delete, data: {confirm: "Are you sure you want to delete task #{task.title}?"} 
            %td
              = link_to 'edit', edit_task_path(task),class:  'btn btn-primary', remote: true 
            #modal.modal.fade
